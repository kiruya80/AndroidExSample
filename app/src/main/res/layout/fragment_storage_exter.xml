<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="test" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_permission_read_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        android:text="읽기 쓰기 권한" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_permission_read_write">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="외부 저장소"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_send_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="파일에 들어갈 데이터\n라인별\nabcde 1234"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_sub"   />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_in_makeFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="make File" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_in_saveFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="save File" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_in_getFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="get File" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_in_getFileList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="get FileList" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>